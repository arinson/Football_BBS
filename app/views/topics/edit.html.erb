<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">投稿編集</h1>
        <%= form_for(@topic, url: topic_path(@topic)) do |f| %>
          
          <div class="field">
            <%= f.label :タイトル %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label :画像 %>
            <%= f.file_field :image, class: 'form-control'%>
          </div>

          <div class="field">
            <%= f.label :説明文 %>
            <%= f.text_area :description, class: 'form-control',  size: "20x10" %>
          </div>

          <%= f.submit '編集する', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>