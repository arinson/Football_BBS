<div class="container">
  <div class="row">
    <div class="col-md-12 topic-show-header">
    <% if @user.image? %>
        <%= image_tag @user.image.url, class: "feed-circle" %>
    <% else %>
        <%= image_tag "8.png", class: "feed-circle" %>
    <% end %>
     
     <span class="user-name">
      <%= link_to(@user.username, "/users/#{@user.id}", :style=>"color:black;") %>
     </span>
      <%= @topic.created_at.strftime('%Y/%m/%d %H:%M') %>に更新
    </div>

    
    <div class="col-md-12 topic-show-title">
        <%= @topic.title %>
    </div>
    <div class="col-md-12 topic-show-description">
        <%= @topic.description %>
    </div>
    <div class="col-md-12 topic-show-image">
         <%= image_tag @topic.image.url %>
    </div>
    <div class="col-md-12 topic-show-comment">
      <div class="comment_<%= @topic.id %>">
        <%= render partial: 'comments/comment', locals: { comment: @comment, topic: @topic } %>
      </div>
    </div>
  </div>
</div>