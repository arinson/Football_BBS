<div class="info-image">
        <% if @user.image? %>
          <%= image_tag @user.image.url, class: "feed-circle" %>
        <% else %>
          <%= image_tag "8.png", class: "feed-circle" %>
        <% end %>
     </div>
<div class="info-content">
     <%= link_to @user.username, @user, class: "name",:style=>"color:black;" %>
     <span><i class="far fa-clone"></i> 投稿数: <%= @user.topics.count %></span>
     <span><i class="far fa-calendar-alt"></i> 登録日: <%= @user.created_at.strftime('%Y/%m/%d') %></span>
 </div>